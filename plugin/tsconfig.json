{
    "compilerOptions": {
        "baseUrl": ".",
        "inlineSourceMap": true,
        "inlineSources": true,
        "module": "ESNext",
        "target": "ES6",
        "allowJs": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "importHelpers": false,
        "isolatedModules": true,
        "strictNullChecks": true,
        "lib": [
            "DOM",
            "ES5",
            "ES6",
            "ES7"
        ],
        "types": [
            "node",
            "jest"
        ],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "jsx": "react-jsx"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "__tests__/**/*.ts",
        "__tests__/**/*.tsx",
        "__mocks__/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}