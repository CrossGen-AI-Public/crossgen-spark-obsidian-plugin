{
  "name": "spark-daemon",
  "version": "0.2.5",
  "description": "Spark Assistant Daemon - Intelligence layer for Obsidian Spark",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "spark": "./dist/cli.js"
  },
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/cli.ts start",
    "dev:debug": "tsx watch --clear-screen=false src/cli.ts start --debug",
    "build": "tsc --project tsconfig.build.json && chmod +x dist/cli.js && mkdir -p dist/init/templates && cp ../example-vault/.spark/config.yaml dist/init/templates/ && cp -r ../example-vault/.spark/agents dist/init/templates/ && cp -r ../example-vault/.spark/commands dist/init/templates/",
    "build:watch": "tsc --project tsconfig.build.json --watch",
    "start": "node dist/index.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:detect-leaks": "NODE_OPTIONS='--experimental-vm-modules' jest --detectOpenHandles",
    "lint": "biome lint src",
    "lint:fix": "biome check --write src",
    "format": "biome format --write src",
    "format:check": "biome check src",
    "type-check": "tsc --noEmit",
    "check": "npm run lint:fix && npm run type-check && npm run test:coverage",
    "clean": "rm -rf dist coverage",
    "reset": "npm run clean && npm install && npm run build",
    "version": "node version-bump.mjs && git add package.json"
  },
  "keywords": [
    "obsidian",
    "ai",
    "automation",
    "claude",
    "daemon"
  ],
  "author": "Spark Team",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.26",
    "@anthropic-ai/sdk": "^0.30.0",
    "chokidar": "^4.0.1",
    "commander": "^12.1.0",
    "fast-glob": "^3.3.2",
    "glob": "^11.0.0",
    "gray-matter": "^4.0.3",
    "minimatch": "^10.0.1",
    "yaml": "^2.6.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
